using System;

class Program
{
    static void Main()
    {
        
        string[] favoriteFoods = new string[3]; //creates a new array with a count of 3
        for (int i = 0; i < 3; i++) //for loop that asks the user for their favorite food mutiple times
        {
            Console.Write("Enter your favorite food: ");
            favoriteFoods[i] = Console.ReadLine();
        }
        Console.WriteLine("Here are your foods:");
        foreach (string food in favoriteFoods) //for loop that writes all of their foods
        {
            Console.WriteLine("I love " + food + "!");
        }
    }
}
